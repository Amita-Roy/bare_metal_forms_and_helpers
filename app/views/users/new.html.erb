<% if false %>
<form action='/users' method='POST' accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="username">Username:</label>
    <input type="text" id="username" name="user[username]"><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="user[email]"><br><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="user[password]"><br><br>

    <input type="submit" value="Submit">

</form>
<% end %>

<% if false %>

<%= form_tag("/users", method: "post") do %>

    <%= label_tag(:username, "Username:") %>
    <%= text_field_tag(:username) %><br><br>

    <%= label_tag(:email, "Email:") %>
    <%= email_field_tag(:email) %><br><br>

    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %><br><br>

    <%= submit_tag("Submit") %>

<% end %>
<% end %>

<%= form_for :user do |form| %>
   <%= form.label :username %>
    <%= form.text_field :username, placeholder: "Username here", value: "Your name here" %><br><br>

    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "abc@example.com" %><br><br>

    <%= form.label :password %>
    <%= form.password_field :password %><br><br>

  <%= form.submit 'Submit'%>
<% end %>